{
  "manifest_version": 3,
  "name": "Selection Translator",
  "version": "1.0.0",
  "description": "Переводит выделенный текст с английского на русский.",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "contextMenus"
  ],
  "host_permissions": [
    "https://translate.googleapis.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "css": ["contentStyles.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "Selection Translator"
  }
}
